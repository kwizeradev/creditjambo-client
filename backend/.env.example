# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database"

# JWT Secrets
JWT_ACCESS_SECRET="super-secret-access-key-change-in-production"
JWT_REFRESH_SECRET="super-secret-refresh-key-change-in-production"

# Token Expiry
ACCESS_TOKEN_TTL="15m"
REFRESH_TOKEN_TTL="7d"

# Session Configuration
INACTIVITY_TIMEOUT="30m"
ROTATE_REFRESH_TOKENS="false"

# Server Configuration
PORT=4000
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="http://localhost:8081,exp://localhost:8081"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
TRANSACTION_RATE_LIMIT_WINDOW_MS=300000
TRANSACTION_RATE_LIMIT_MAX=10

# Push Notifications (Expo)
EXPO_ACCESS_TOKEN=""

# Low Balance Threshold
LOW_BALANCE_THRESHOLD=100

# Password Hashing Configuration
PASSWORD_SALT_BYTES=16
PASSWORD_HASH_ITERATIONS=100000
PASSWORD_HASH_LENGTH=64

# Input Sanitization Limits
MAX_INPUT_STRING_LENGTH=10000
MAX_INPUT_OBJECT_DEPTH=10

# Session Management
SESSION_CLEANUP_INTERVAL_HOURS=24